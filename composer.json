{
    "name": "joomladevelopers/spark",
    "type": "project",
    "description": "Joomla Spark is a Joomla distribution for developers by developers. The aim of this project is to create a lightweight Joomla core distro, moving extensions into seperate repositories, while maintaining 100% compatibility.",
    "keywords": ["joomla", "cms", "spark"],
    "homepage": "https://github.com/joomladevelopers/joomla-spark",
    "license": "GPL-2.0+",
    "config": {
        "platform": {
            "php": "5.4"
        },
        "vendor-dir": "libraries/vendor"
    },
    "require": {
        "php": ">=5.4",
        "joomla/application": "~1.5",
        "joomla/di": "~1.2",
        "joomla/event": "~1.1",
        "joomla/registry": "~1.4 >=1.4.5",
        "joomla/session": "~1.3",
        "joomla/string": "~1.3",
        "joomla/uri": "~1.1",
        "joomla/utilities": "~1.3 >=1.3.3",
        "ircmaxell/password-compat": "1.*",
        "leafo/lessphp": "0.5.0",
        "paragonie/random_compat": "~1.0",
        "phpmailer/phpmailer": "5.2.14",
        "symfony/polyfill-php55": "~1.2",
        "symfony/polyfill-php56": "~1.0",
        "symfony/yaml": "2.*",
        "simplepie/simplepie": "1.3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "phpunit/dbunit": "~1.3",
        "squizlabs/php_codesniffer": "~1.5",
        "pear/cache_lite": "1.7.16"
    }
}
